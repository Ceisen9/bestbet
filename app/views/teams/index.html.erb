
<h2>NATIONAL FOOTBALL LEAGUE</h2>
  <div class='row'>

    <div class='col-md-3'>
      <table class='table table-striped'>
        <th>Conference</th>
        <th>Division</th>
        <th>Team</th>
        <% @teams.each do |team| %>
          <tr>
            <td><%= team.conference %></td>
            <td><%= team.division %></td>
            <td><%= link_to team.name, team_path(team) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
