<div class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand"> <%= link_to 'BestBet', root_path, class: "name" %></div>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav">
        <li><%= link_to "Go to Games", games_path, class: "games_path" %></li>
      </ul>
    </div>
  </div>
</div>



<div class='row'>
  <div class='col-md-1'>
    <h3>Filters</h3>
    <h4>Division</h4>
    <div class='btn-group-vertical'>
      <a href='<%= teams_path %>'
        type='button'
        class='btn btn-default
        <%= 'btn-primary btn-active' if @division == 'All' %>
        btn-sm'
        >All</a>
        <% @divisions.each do |division| %>
        <a href='/teams?division=<%= division %>'
          type='button'
          class='btn btn-default
          <%= 'btn-primary btn-active' if @division == division %>
          btn-sm'
          ><%= division %></a>
          <% end %>
        </div>
        <h4>Conference</h4>
        <div class='btn-group-vertical'>
          <a href='<%= teams_path %>'
            type='button'
            class='btn btn-default
            <%= 'btn-primary btn-active' if @conference == 'All' %>
            btn-sm'
            >All</a>
            <% @conferences.each do |conference| %>
            <a href='/teams?conference=<%= conference %>'
              type='button'
              class='btn btn-default
              <%= 'btn-primary btn-active' if @conference == conference %>
              btn-sm'
              ><%= conference %></a>
              <% end %>
            </div>
          </div>

          <div class='col-md-3'>
            <table class='table table-striped table-bordered .table-sm'>
              <thead>
                <tr>
                  <th>Conference</th>
                  <th>Division</th>
                  <th>Team</th>
                </tr>
              </thead>
              <tbody>
                  <% @teams.first(16).each do |team| %>
                  <tr>
                    <td><%= team.conference %></td>
                    <td><%= team.division %></td>
                    <td><%= link_to team.name, team_path(team) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <% if @teams.length > 16 %>
            <div class='col-md-3'>
              <table class='table table-striped table-bordered .table-sm'>
                <thead>
                  <tr>
                    <th>Conference</th>
                    <th>Division</th>
                    <th>Team</th>
                  </tr>
                </thead>
                <tbody>
                    <% @teams.last(16).each do |team| %>
                    <tr>
                      <td><%= team.conference %></td>
                      <td><%= team.division %></td>
                      <td><%= link_to team.name, team_path(team) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% end %>

        </div>
