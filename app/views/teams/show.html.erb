<div class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand"> <%= link_to 'BestBet', root_path, class: "name" %></div>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav">
        <li><%= link_to "Go to Games", games_path, class: "games_path" %></li>
      </ul>
    </div>
  </div>
</div>

<div class="team_name"><%= @team.name %></div>

<div class="row">
  <div class='col-md-1'>
    <h3>Filters</h3>
    <h4>Location</h4>
    <div class='btn-group-vertical'>
      <a href='<%= team_path(@team) %>'
        type='button'
        class='btn btn-default
        <%= 'btn-primary btn-active' if @location == 'All' %>
        btn-sm'
      >All</a>
        <% @locations.each do |spot| %>
          <a href='/teams/<%=@team.id%>?location=<%= spot %>'
            type='button'
            class='btn btn-default
            <%= 'btn-primary btn-active' if @location == spot %>
            btn-sm'
          ><%= spot %></a>
        <% end %>
    </div>
    <h4>Season</h4>
    <div class='btn-group-vertical'>
      <a href='<%= team_path(@team) %>'
        type='button'
        class='btn btn-default
        <%= 'btn-primary btn-active' if @season == 'All' %>
        btn-sm'
      >All</a>
        <% @seasons.each do |year| %>
          <a href='/teams/<%=@team.id%>?season=<%= year %>'
            type='button'
            class='btn btn-default
            <%= 'btn-primary btn-active' if @season == year %>
            btn-sm'
          ><%= year %></a>
        <% end %>
    </div>
  </div>

  <div class='col-md-2'>
    <table class='table table-striped table-bordered .table-sm'>
      <tbody>
        <tr>
          <td class="data_title">Record</td>
          <td class="data_row"><%= @wins %> - <%= @losses %></td>
        </tr>
        <tr>
          <td class="data_title">Average Betting Line</td>
          <td class="data_row"><%= @betting_lines %></td>
        </tr>
        <tr>
          <td class="data_title">Average Over/Under</td>
          <td class="data_row"><%= @over_unders %></td>
        </tr>
        <tr>
          <td class="data_title">Win Percentage</td>
          <td class="data_row"><%= @win_percent %>%</td>
        </tr>
        <tr>
          <td class="data_title">Win Percentage when Betting the Line on <%= @team.name %></td>
          <td class="data_row"><%= @betting_line_success_rate %>%</td>
        </tr>
        <tr>
          <td class="data_title">Win Percentage when Betting the Line on  <%= @team.name %></td>
          <td class="data_row"><%= @betting_line_success_rate %>%</td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class='col-md-6 games'>
    <table class='table table-striped'>
      <thead>
        <tr>
          <th>Date</th>
          <th>Away Team</th>
          <th>Home Team</th>
          <th>Score</th>
          <th>Betting Line</th>
          <th>Over Under</th>
        </tr>
      </thead>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.date %></td>
          <td><%= game.away_team.name %></td>
          <td><%= game.home_team.name %></td>
          <td><%= game.away_team_score%> - <%= game.home_team_score%></td>
          <td><%= game.betting_line %></td>
          <td><%= game.over_under %></td>
        </tr>
      <% end %>
    </table>
  </div>

</div>
