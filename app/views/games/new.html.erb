<div class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand"> <%= link_to 'BestBet', root_path, class: "name" %></div>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav">
        <li><%= link_to "Go to Games", games_path, class: "games_path" %></li>
      </ul>
    </div>
  </div>
</div>


<div class="team_name">Log a New Result</div>

<%= form_for @game do |f| %>
  <%= f.date_field(:date) %>
  <br>
  <br>
  <%= f.label :away_team%>
  <%= f.select(:away_team_id, options_for_select(@teams.map{|team| [team.name, team.id]})) %>
  <br>
  <br>
  <%= f.label :home_team%>
  <%= f.select(:home_team_id, options_for_select(@teams.map{|team| [team.name, team.id]})) %>
  <br>
  <br>
  <%= f.label :away_team_score%>
  <%= f.text_field :away_team_score %>
  <br>
  <br>
  <%= f.label :home_team_score %>
  <%= f.text_field :home_team_score %>
  <br>
  <br>
  <%= f.label :betting_line %>
  <%= f.text_field :betting_line%>
  <br>
  <br>
  <%= f.label :over_under %>
  <%= f.text_field :over_under %>
  <br>
  <br>
  <%= f.hidden_field :manual_creation, value: true %>
  <%= f.submit "Submit" %>
<% end %>
