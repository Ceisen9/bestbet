<%= link_to "&larr; Home".html_safe, root_path %>

<h1>Log a New Result</h1>

<%= form_for @game do |f| %>
  <%= f.date_field(:date) %>
  <br>
  <br>
  <%= f.label :away_team_id %>
  <%= f.text_field :away_team_id %>
  <br>
  <br>
  <%= f.label :home_team%>
  <%= f.select(:home_team_id, options_for_select(@teams.map{|team| [team.name, team.id]})) %>
  <br>
  <br>
  <%= f.label :away_team_score%>
  <%= f.text_field :away_team_score %>
  <br>
  <br>
  <%= f.label :home_team_score %>
  <%= f.text_field :home_team_score %>
  <br>
  <br>
  <%= f.label :betting_line %>
  <%= f.text_field :betting_line%>
  <br>
  <br>
  <%= f.label :over_under %>
  <%= f.text_field :over_under %>
  <br>
  <br>
  <%= f.hidden_field :manual_creation, value: true %>
  <%= f.submit "Submit" %>
<% end %>
