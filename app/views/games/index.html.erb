<div class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand"> <%= link_to 'BestBet', root_path, class: "name" %></div>
    </div>

  </div>
</div>

<div class="team_name">Games</div>

<div class="log_new_game"><%= link_to "Log new game", new_game_path %></div>

  <div class='col-md-1'>
    <h3>Filter</h3>
    <h4>Season</h4>
    <div class='btn-group-vertical'>
      <a href='<%= games_path %>'
        type='button'
        class='btn btn-default
        <%= 'btn-primary btn-active' if @season == 'All' %>
        btn-sm'
      >All</a>
        <% @seasons.each do |year| %>
          <a href='/games?season=<%= year %>'
            type='button'
            class='btn btn-default
            <%= 'btn-primary btn-active' if @season == year %>
            btn-sm'
          ><%= year %></a>
        <% end %>
    </div>
  </div>

  <div class='col-md-2'>
    <table class='table table-striped table-bordered .table-sm'>
      <tbody>
        <tr>
          <td class="data_title">Total Games Played</td>
          <td class="data_row"><%= @game_count %></td>
        </tr>
        <tr>
          <td class="data_title">Home Win Percentage</td>
          <td class="data_row"><%= @home_team_win_percent %>%</td>
        </tr>
        <tr>
          <td class="data_title">Away Win Percentage</td>
          <td class="data_row"><%= @away_team_win_percent %>%</td>
        </tr>
        <tr>
          <td class="data_title">Average Betting Line</td>
          <td class="data_row"><%= @betting_lines %></td>
        </tr>
        <tr>
          <td class="data_title">Win Percentage when Betting the Line on Home Team</td>
          <td class="data_row"><%= @betting_line_success_rate_home %>%</td>
        </tr>
        <tr>
          <td class="data_title">Win Percentage when Betting the Line on Away Team</td>
          <td class="data_row"><%= @betting_line_success_rate_away %>%</td>
        </tr>
        <tr>
          <td class="data_title">Average Over/Under</td>
          <td class="data_row"><%= @over_unders %></td>
        </tr>
        <tr>
          <td class="data_title">Win Percentage on Betting the Over</td>
          <td class="data_row"><%= @over_success_rate %>%</td>
        </tr>
        <tr>
          <td class="data_title">Win Percentage on Betting the Under</td>
          <td class="data_row"><%= @under_success_rate %>%</td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class='col-md-6 games'>
    <table class='table table-striped'>
      <thead>
        <tr>
          <th>Date</th>
          <th>Away Team</th>
          <th>Home Team</th>
          <th>Score</th>
          <th>Betting Line</th>
          <th>Over Under</th>
          <th></th>
        </tr>
      </thead>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.date %></td>
          <td><%= game.away_team.name %></td>
          <td><%= game.home_team.name %></td>
          <td><%= game.away_team_score%> - <%= game.home_team_score%></td>
          <td><%= game.betting_line %></td>
          <td><%= game.over_under %></td>
          <td>
            <% if game.manual_creation %>
              <%=link_to "Delete Game", game_path(game), method: :delete %>
            <% end %>
          </td>

        </tr>
      <% end %>
    </table>
  </div>
